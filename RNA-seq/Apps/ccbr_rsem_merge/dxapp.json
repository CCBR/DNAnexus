{
  "name": "ccbr_rsem_merge",
  "title": "ccbr_rsem_merge",
  "summary": "Merge results from different samples and create merged files for expected counts, FPKM and TPM values",
  "dxapi": "1.0.0",
  "version": "0.0.2",
  "inputSpec": [
    {
      "name": "GeneResults",
      "label": "GeneResults",
      "help": "",
      "class": "array:file",
      "patterns": ["*.RSEM.genes.results"],
      "optional": false
    },
    {
      "name": "IsoformResults",
      "label": "IsoformResults",
      "help": "",
      "class": "array:file",
      "patterns": ["*.RSEM.isoforms.results"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "hg19 or hg19_KSHV or hg38 or hg38_HPV16 or mm9 or mm10 or Mmul_8.0.1",
      "help": "",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "ExpectedCounts",
      "label": "ExpectedCounts",
      "help": "",
      "class": "array:file",
      "patterns": ["*"]
    },
    {
      "name": "FPKM",
      "label": "FPKM",
      "help": "",
      "class": "array:file",
      "patterns": ["*"]
    },
    {
      "name": "TPM",
      "label": "TPM",
      "help": "",
      "class": "array:file",
      "patterns": ["*"]
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "tree"
      },
      {
        "name": "python2.7"
      },
      {
        "version": "0.23.4",
        "package_manager": "pip",
        "name": "pandas"
      }
    ],
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 10
      }
    },
    "distribution": "Ubuntu"
  },
  "authorizedUsers": [
    "user-kuynsa",
    "user-pcf",
    "user-annao",
    "user-kopardevn",
    "user-cappellacci"
  ],
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  },
  "details": {},
  "categories": [],
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  }
}
