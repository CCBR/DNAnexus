{
  "name": "ccbr_bam2rsem",
  "title": "ccbr_bam2rsem",
  "summary": "Use RSEM to count genes and isoforms",
  "dxapi": "1.0.0",
  "version": "0.0.5",
  "inputSpec": [
    {
      "name": "TranscriptomeBam",
      "label": "STAR pass 2 generated Aligned.toTranscriptome.out.bam file",
      "help": "",
      "class": "array:file",
      "patterns": ["*.toTranscriptome.out.bam"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "Genome: mm9 or mm10 or hg19 or hg19_KSHV or hg38 or hg38_HPV16 or Mmul_8.0.1",
      "help": "",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "OutRSEMgenes",
      "label": "Output table from RSEM",
      "help": "",
      "class": "array:file",
      "patterns": ["*.RSEM.genes.results"]
    },
    {
      "name": "OutRSEMisoforms",
      "label": "Output table from RSEM for isoforms",
      "help": "",
      "class": "array:file",
      "patterns": ["*.RSEM.isoforms.results"]
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "tree"
      },
      {
        "name": "python2.7"
      }
    ],
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "main": {
        "hours": 6
      },
      "run_rsemcounts": {
	"hours": 5
      }
    },
    "distribution": "Ubuntu"
  },
  "authorizedUsers": [
    "user-kuynsa",
    "user-pcf",
    "user-annao",
    "user-kopardevn",
    "user-cappellacci"
  ],
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_hdd2_x1"
        }
      }
    }
  },
  "details": {},
  "categories": [],
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  }
}
