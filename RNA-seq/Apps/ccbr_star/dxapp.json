{
  "name": "ccbr_star",
  "title": "ccbr_star",
  "summary": "STAR Alignmnet: One-pass mode",
  "dxapi": "1.0.0",
  "version": "0.0.6",
  "inputSpec": [
    {
      "name": "RawFq",
      "label": "RawFq",
      "help": "",
      "class": "array:file",
      "patterns": ["*.fastq.gz", "*.fastq"],
      "optional": false
    },
    {
      "name": "TrimmedFq",
      "label": "TrimmedFq",
      "help": "",
      "class": "array:file",
      "patterns": ["*.trimmed.fastq.gz"],
      "optional": false
    },
    {
      "name": "TrimmedFastqcTxt",
      "label": "TrimmedFastqcTxt",
      "help": "",
      "class": "array:file",
      "patterns": ["*_fastqc_data.txt"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "hg19 or hg38 or hg38_HPV16 or mm9 or mm10 or hg19_KSHV or Mmul_8.0.1",
      "help": "",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "OutTab",
      "label": "OutTab",
      "help": "",
      "class": "array:file",
      "patterns": ["*.SJ.out.tab"]
    },
    {
      "name": "OutReadsPerGeneTab",
      "label": "OutReadsPerGeneTab",
      "help": "",
      "class": "array:file",
      "patterns": ["*.ReadsPerGene.out.tab"]
    },
    {
      "name": "OutTranscriptomeBam",
      "label": "OutTranscriptomeBam",
      "help": "",
      "class": "array:file",
      "patterns": ["*.toTranscriptome.out.bam"]
    },
    {
      "name": "OutLog",
      "label": "OutLog",
      "help": "",
      "class": "array:file",
      "patterns": ["*.final.out"]
    },
    {
      "name": "OutStarDuplic",
      "label": "OutStarDuplic",
      "help": "",
      "class": "array:file",
      "patterns": ["*.star.duplic"]
    },
    {
      "name": "OutStarDmarkBam",
      "label": "OutStarDmarkBam",
      "help": "",
      "class": "array:file",
      "patterns": ["*.dmark.bam"]
    },
    {
      "name": "OutStarDmarkBai",
      "label": "OutStarDmarkBai",
      "help": "",
      "class": "array:file",
      "patterns": ["*.dmark.bai"]
    },
    {
      "name": "OutRnaSeqMetricsTxt",
      "label": "OutRnaSeqMetricsTxt",
      "help": "",
      "class": "array:file",
      "patterns": ["*.RnaSeqMetrics.txt"]
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "tree"
      },
      {
        "name": "python2.7"
      },
      {
        "name": "openjdk-8-jre-headless"
      }
    ],
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "main": {
        "hours": 7
      },
      "run_star": {
	"hours": 3
      },
      "run_dedup": {
	"hours": 6
      }
    },
    "distribution": "Ubuntu"
  },
  "authorizedUsers": [
    "user-kuynsa",
    "user-pcf",
    "user-annao",
    "user-kopardevn",
    "user-cappellacci"
  ],
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  },
  "details": {},
  "categories": [],
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  }
}
