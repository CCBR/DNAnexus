{
  "name": "ccbr_RNA-seq_WF",
  "title": "ccbr_RNA-seq_WF",
  "summary": "Center for Cancer Research Collaborative Bioinformatics Research: RNA-seq Pipeline",
  "inputs": [
    {
      "help": "Please a series of fastq files: -iFastqFiles=/f1.R1.fastq.gz -iFastqFiles=/f1.R2.fastq.gz -iFastqFiles=/Testing/f2.R1.fastq.gz -iFastqFiles=/f2.R2.fastq.gz",
      "label": "Input Fastq File Array",
      "patterns": ["*.fastq.gz"],
      "optional": false,
      "class": "array:file",
      "name": "FastqFiles"
    },
    {
      "help": "Needed for dynamically resolving the correct reference files. Please choose from one of the following: [mm9, mm10, hg38, hg38_HPV16, hg19, hg19_KSHV, hs38d1, hs37d5, Mmul_8.0.1]",
      "label": "Reference Genome",
      "patterns": ["hg19", "hg19_KSHV", "hg38", "hg38_HPV16", "mm9", "mm10", "Mmul_8.0.1"],
      "optional": false,
      "class": "string",
      "name": "RefGenome"
    }
  ],
  "stages": [
    {
      "id": "rawfastqc",
      "executable": "app-ccbr_fastqc_array/0.0.1",
      "folder": "rawQC",
      "input": {
        "InFq": {
          "$dnanexus_link": {
            "workflowInputField": "FastqFiles"
          }
        }
      }
    },
    {
      "id": "trim_pe",
      "executable": "app-ccbr_cutadapt_array/0.0.1",
      "folder": "trim",
      "input": {
        "InFq": {
          "$dnanexus_link": {
            "workflowInputField": "FastqFiles"
          }
        }
      }
    },
    {
      "id": "fastqc",
      "executable": "app-ccbr_fastqc_array/0.0.1",
      "folder": "QC",
      "input": {
        "InFq": [
          {
            "$dnanexus_link": {
              "outputField": "OutFq",
              "stage": "trim_pe"
            }
          }
        ]
      }
    },
    {
      "id": "fastq_screen_p1",
      "executable": "app-ccbr_fastqscreen_p1_array/0.0.1",
      "folder": "fqscreen1",
      "input": {
        "InFq": [
          {
            "$dnanexus_link": {
              "inputField": "InFq",
              "stage": "fastqc"
            }
          }
        ]
      }
    },
    {
      "id": "fastq_screen_p2",
      "executable": "app-ccbr_fastqscreen_p2_array/0.0.1",
      "folder": "fqscreen2",
      "input": {
        "InFq": [
          {
            "$dnanexus_link": {
              "inputField": "InFq",
              "stage": "fastq_screen_p1"
            }
          }
        ]
      }
    },
    {
      "id": "star",
      "executable": "app-ccbr_star/0.0.6",
      "folder": "star",
      "input": {
        "TrimmedFastqcTxt": [
          {
            "$dnanexus_link": {
              "outputField": "OutTxt",
              "stage": "fastqc"
            }
          }
        ],
        "TrimmedFq": [
          {
            "$dnanexus_link": {
              "outputField": "OutFq",
              "stage": "trim_pe"
            }
          }
        ],
        "RawFq": [
          {
            "$dnanexus_link": {
              "inputField": "InFq",
              "stage": "rawfastqc"
            }
          }
        ],
        "Genome": {
          "$dnanexus_link": {
            "workflowInputField": "RefGenome"
          }
        }
      }
    },
    {
      "id": "rsem",
      "executable": "app-ccbr_bam2rsem/0.0.5",
      "folder": "rsem",
      "input": {
        "Genome": {
          "$dnanexus_link": {
            "workflowInputField": "RefGenome"
          }
        },
        "TranscriptomeBam": [
          {
            "$dnanexus_link": {
              "outputField": "OutTranscriptomeBam",
              "stage": "star"
            }
          }
        ]
      }
    },
    {
      "id": "merge_rsem",
      "executable": "app-ccbr_rsem_merge/0.0.2",
      "folder": "rsem",
      "input": {
        "IsoformResults": [
          {
            "$dnanexus_link": {
              "outputField": "OutRSEMisoforms",
              "stage": "rsem"
            }
          }
        ],
        "GeneResults": [
          {
            "$dnanexus_link": {
              "outputField": "OutRSEMgenes",
              "stage": "rsem"
            }
          }
        ],
        "Genome": {
          "$dnanexus_link": {
            "workflowInputField": "RefGenome"
          }
        }
      }
    },
    {
      "id": "multiqc",
      "executable": "app-ccbr_rnaseq_multiqc_report/0.0.2",
      "folder": "report",
      "input": {
        "STAR_final_out_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutLog",
              "stage": "star"
            }
          }
        ],
        "RawFastQC_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutTxt",
              "stage": "rawfastqc"
            }
          }
        ],
        "FastqScreenDB1_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutTxt",
              "stage": "fastq_screen_p1"
            }
          }
        ],
        "Picard_duplic_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutStarDuplic",
              "stage": "star"
            }
          }
        ],
        "FastqScreenDB2_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutTxt",
              "stage": "fastq_screen_p2"
            }
          }
        ],
        "FastQC_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutTxt",
              "stage": "fastqc"
            }
          }
        ],
        "Picard_RNASeqMetrics_files": [
          {
            "$dnanexus_link": {
              "outputField": "OutRnaSeqMetricsTxt",
              "stage": "star"
            }
          }
        ]
      }
    }
  ]
}
