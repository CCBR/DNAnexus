{
  "name": "ccbr_fastqc",
  "title": "CCBR FASTQC",
  "summary": "Fastqc for 1 fastq file",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "InFq",
      "label": "Input fastq file",
      "help": "",
      "class": "file",
      "patterns": ["*.fastq","*.fastq.gz"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "OutHtml",
      "label": "OutHtml",
      "help": "",
      "class": "file",
      "patterns": ["*.html"]
    },
    {
      "name": "OutTxt",
      "label": "fastqc_data.txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
