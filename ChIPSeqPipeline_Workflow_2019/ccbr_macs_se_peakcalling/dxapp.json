{
  "name": "ccbr_macs_se_peakcalling",
  "title": "CCBR MACS SE PEAKCALLING",
  "summary": "Peakcalling using macs (narrow and broad)",
  "dxapi": "1.0.0",
  "version": "0.1.0",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "Genome2Resources",
      "label": "Genome2Resources TSV lookup table",
      "help": "",
      "class": "file",
      "patterns": ["*.tsv"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "mm10 or hg19 or hg38 etc.",
      "help": "",
      "class": "string",
      "optional": false
    },
    {
      "name": "TreatmentTagAlign",
      "label": "Treatment TagAlign",
      "help": "",
      "class": "file",
      "patterns": ["*.tagAlign.gz"],
      "optional": false
    },
    {
      "name": "TreatmentPPQT",
      "label": "Treatment PPQT file",
      "help": "",
      "class": "file",
      "patterns": ["*.ppqt"],
      "optional": false
    },
    {
      "name": "InputTagAlign",
      "label": "Input or IgG TagAlign",
      "help": "",
      "class": "file",
      "patterns": ["*.tagAlign.gz"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "NarrowPeak",
      "label": "NarrowPeak output file",
      "help": "",
      "class": "file",
      "patterns": ["*.narrowPeak"]
    },
    {
      "name": "BroadPeak",
      "label": "BroadPeak output file",
      "help": "",
      "class": "file",
      "patterns": ["*.broadPeak"]
    },
    {
      "name": "GappedPeak",
      "label": "NarrowPeak output file",
      "help": "",
      "class": "file",
      "patterns": ["*.gappedPeak"]
    },
    {
      "name": "SummitsBed",
      "label": "macs summits bed output file",
      "help": "",
      "class": "file",
      "patterns": ["*.bed"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
