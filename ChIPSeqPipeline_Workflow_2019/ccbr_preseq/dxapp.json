{
  "name": "ccbr_preseq",
  "title": "CCBR Preseq",
  "summary": "Use preseq to get c_curve, NRF, PBC1 and PBC2",
  "dxapi": "1.0.0",
  "version": "0.0.2",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "Bam",
      "label": "Input bam file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "CCurve",
      "label": "Ccurve text file",
      "help": "",
      "class": "file",
      "patterns": ["*.c_curve"]
    },
    {
      "name": "NRF",
      "label": "NRF etc. text file",
      "help": "",
      "class": "file",
      "patterns": ["*.nrf.txt"]
    },
    {
      "name": "IdxStats",
      "label": "IdxStats text file",
      "help": "",
      "class": "file",
      "patterns": ["*.idxstats"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
