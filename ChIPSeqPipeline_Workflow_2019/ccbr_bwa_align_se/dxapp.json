{
  "name": "ccbr_bwa_align_se",
  "title": "CCBR BWA SE ChIPSeq Aligner",
  "summary": "Remove reads aligning to blacklisted regions and then align SE reads to a reference with BWA generate sorted.bam and sorted.Q5.bam files",
  "dxapi": "1.0.0",
  "version": "0.0.3",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "Genome2Resources",
      "label": "Genome2Resources TSV lookup table",
      "help": "",
      "class": "file",
      "patterns": ["*.tsv"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "mm10 or hg19 or hg38 etc.",
      "help": "",
      "class": "string",
      "optional": false
    },
    {
      "name": "InFq",
      "label": "Reads in Fastq.gz format",
      "help": "",
      "class": "file",
      "patterns": ["*.fastq.gz","*.fastq"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "SortedBam",
      "label": "Sorted Bam file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "SortedBamBai",
      "label": "Sorted Bam's index file",
      "help": "",
      "class": "file",
      "patterns": ["*.bai"]
    },
    {
      "name": "SortedQ5Bam",
      "label": "Sorted Q5 Bam file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "SortedQ5BamBai",
      "label": "Sorted Q5 Bam's index file",
      "help": "",
      "class": "file",
      "patterns": ["*.bai"]
    },
    {
      "name": "SortedBamFlagstat",
      "label": "Sorted Bam's flagstat",
      "help": "",
      "class": "file",
      "patterns": ["*.flagstat"]
    },
    {
      "name": "SortedQ5BamFlagstat",
      "label": "Sorted Q5 Bam's flagstat",
      "help": "",
      "class": "file",
      "patterns": ["*.flagstat"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
