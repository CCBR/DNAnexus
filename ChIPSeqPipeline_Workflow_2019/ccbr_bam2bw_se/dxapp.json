{
  "name": "ccbr_bam2bw_se",
  "title": "CCBR BAM2BIGWIG SE",
  "summary": "Normalize SE bam files (1 treatment 1 input) using deeptools RPGC method to generate bigwig files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "Genome2Resources",
      "label": "Genome2Resources TSV lookup table",
      "help": "",
      "class": "file",
      "patterns": ["*.tsv"],
      "optional": false
    },
    {
      "name": "Genome",
      "label": "mm9/10, hg19/38",
      "help": "",
      "class": "string",
      "optional": false
    },
    {
      "name": "TreatmentBam",
      "label": "ChIP treatment bam file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": false
    },
    {
      "name": "TreatmentPPQT",
      "label": "ChIP treatment ppqt file for extension size",
      "help": "",
      "class": "file",
      "patterns": ["*.ppqt"],
      "optional": false
    },
    {
      "name": "InputBam",
      "label": "Input or IgG bam file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "TreatmentBigwig",
      "label": "Output treatment bigwig file",
      "help": "",
      "class": "file",
      "patterns": ["*.bw"]
    },
    {
      "name": "InputBigwig",
      "label": "Output Input/IgG bigwig file",
      "help": "",
      "class": "file",
      "patterns": ["*.bw"]
    },
    {
      "name": "InputNormBigwig",
      "label": "Output Treatment minus Input/IgG bigwig file",
      "help": "",
      "class": "file",
      "patterns": ["*.bw"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
      }
    }
  }
}
