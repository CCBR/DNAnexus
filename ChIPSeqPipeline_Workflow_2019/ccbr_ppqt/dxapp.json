{
  "name": "ccbr_ppqt",
  "title": "CCBR PPQT",
  "summary": "Use SPP to generate cross correlation plot and ppqt stats",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputSpec": [
    {
      "name": "InBam",
      "label": "Input bam or tagAlign file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam","*.tagAlign.gz"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "OutPdf",
      "label": "CC plot as pdf",
      "help": "",
      "class": "file",
      "patterns": ["*.pdf"]
    },
    {
      "name": "OutPpqt",
      "label": "ppqt stats output file",
      "help": "",
      "class": "file",
      "patterns": ["*.ppqt"]
    },
    {
      "name": "SarTxt",
      "label": "Sar output txt file",
      "help": "",
      "class": "file",
      "patterns": ["*.txt"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "execDepends" :
    [
      {"name" : "sysstat"}
    ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
