{
  "name": "ccbr_macs_filterdup",
  "title": "CCBR_MACS2_filterdup",
  "summary": "CCBR deduplications of SE mapped bam file using macs filterdup",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "Bam",
      "label": "Bam",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "TagAlign",
      "label": "BED6 dedup file",
      "help": "",
      "class": "file",
      "patterns": ["*.tagAlign"]
    },
    {
      "name": "OutBam",
      "label": "Bam file for bigwig creation",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
