{
  "name": "ccbr_chipseq_trim_align_dedup_pe",
  "title": "CCBR TAD PE",
  "summary": "Trims PE reads using cutadapt, removes reads aligning to blacklisted regions (including mitochondria and ribosomes), aligns reads to genome and removes duplicate reads using macs2 filterdup for BAMPE",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "SampleName",
      "label": "SampleName",
      "help": "",
      "class": "string",
      "optional": false
    },
    {
      "name": "InFqR1",
      "label": "Input R1 Fastq gzipped file",
      "help": "",
      "class": "file",
      "patterns": ["*.fastq", "*.fastq.gz"],
      "optional": false
    },
    {
      "name": "InFqR2",
      "label": "Input R2 Fastq gzipped file",
      "help": "",
      "class": "file",
      "patterns": ["*.fastq", "*.fastq.gz"],
      "optional": false
    },
    {
      "name": "Genome2Resources",
      "class": "file",
      "patterns": ["*.tsv"],
      "optional": false
    },
    {
      "name": "Genome",
      "class": "string",
      "patterns": ["mm9", "mm10", "hg19", "hg38"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "Q5DDbam",
      "label": "Q5DD bam",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "Q5DDflagstat",
      "label": "Q5DDflagstat",
      "help": "",
      "class": "file",
      "patterns": ["*.flagstat"]
    },
    {
      "name": "R1fastqzip",
      "label": "R1 fastq zip file",
      "help": "",
      "class": "file",
      "patterns": ["*.zip"]
    },
    {
      "name": "R2fastqzip",
      "label": "R2 fastq zip file",
      "help": "",
      "class": "file",
      "patterns": ["*.zip"]
    },
    {
      "name": "noBLR1fastqzip",
      "label": "prealignment R1 fastq zip file",
      "help": "",
      "class": "file",
      "patterns": ["*.zip"]
    },
    {
      "name": "noBLR2fastqzip",
      "label": "prealignment R2 fastq zip file",
      "help": "",
      "class": "file",
      "patterns": ["*.zip"]
    },
    {
      "name": "Nreads",
      "label": "details about surviving reads after each step",
      "help": "",
      "class": "file",
      "patterns": ["*.zip"]
    },
    {
      "name": "TagAlign",
      "label": "Deduplicated TagAlign file",
      "help": "",
      "class": "file",
      "patterns": ["*.tagAlign.gz", "*.tagAlign"]
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "sysstat"
      }
    ],
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
      }
    }
  }
}
