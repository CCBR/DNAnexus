{
  "name": "ccbr_chipseq_trim_align_dedup",
  "title": "CCBR ChIPSeq TRIM_ALIGN_DEDUP",
  "summary": "ccbr_chipseq_trim_align_dedup",
  "version": "0.0.1",
  "authorizedUsers": [
    "user-kopardevn",
    "user-kuynsa",
    "user-annao",
    "user-cappellacci",
    "user-pcf"  
  ],
  "inputs": [
    {
      "name": "InputFastq",
      "class": "file",
      "patterns": ["*.fastq.gz"],
      "optional": false    
    },
    {
      "name": "Genome2Resources",
      "class": "file",
      "patterns": ["*.tsv"],
      "optional": false    
    },   
    {
      "name": "Genome",
      "class": "string",
      "patterns" : ["mm9", "mm10", "hg19", "hg38"],
      "optional": false    
    }  
  ],
  "stages": [
    {
      "id": "stage-TRIM",
      "executable": "app-ccbr_cutadapt_se/0.1.1",
      "folder": "trim",
      "input": {
        "InFq": {
          "$dnanexus_link": {
            "workflowInputField": "InputFastq"
          }
        }
      },
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
      }
    },
    {
      "id": "stage-ALIGN",
      "executable": "app-ccbr_bwa_align_se/0.1.1",
      "folder": "bam",
      "input": {
        "InFq": {
          "$dnanexus_link": {
            "outputField": "OutFq",
            "stage": "stage-TRIM"
          }
        },
        "Nreads": {
          "$dnanexus_link": {
            "outputField": "Nreads",
            "stage": "stage-TRIM"
          }
        },
        "Genome": {
          "$dnanexus_link": {
            "workflowInputField": "Genome"
          }
        },
        "Genome2Resources": {
          "$dnanexus_link": {
            "workflowInputField": "Genome2Resources"
          }
        }
      },
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
      }
    },
    {
      "id": "stage-DEDUP",
      "executable": "app-ccbr_macs_filterdup/0.1.1",
      "folder":"bam",
      "input": {
        "Genome2Resources": {
          "$dnanexus_link": {
            "workflowInputField": "Genome2Resources"
          }
        },
        "Genome" : {
          "$dnanexus_link": {
            "workflowInputField": "Genome"
          }
        },
        "Nreads": {
          "$dnanexus_link": {
            "outputField": "OutNreads",
            "stage": "stage-ALIGN"
          }
        },
        "Bam": {
          "$dnanexus_link": {
            "outputField": "SortedQ5Bam",
            "stage": "stage-ALIGN"
          }
        }
      },
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  ],
  "outputs": [
    {
      "name": "TrimmedFastq",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-TRIM",
          "outputField": "OutFq"
        }
      }
    },
    {
      "name": "SortedBam",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedBam"
        }
      }
    },
    {
      "name": "SortedBamBai",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedBamBai"
        }
      }
    },
    {
      "name": "SortedBamFlagstat",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedBamFlagstat"
        }
      }
    },
    {
      "name": "SortedQ5Bam",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedQ5Bam"
        }
      }
    },
    {
      "name": "SortedQ5BamBai",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedQ5BamBai"
        }
      }
    },    
    {
      "name": "SortedQ5BamFlagstat",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-ALIGN",
          "outputField": "SortedQ5BamFlagstat"
        }
      }
    },
    {
      "name": "TagAlign",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-DEDUP",
          "outputField": "TagAlign"
        }
      }
    },
    {
      "name": "Nreads",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-DEDUP",
          "outputField": "OutNreads"
        }
      }
    },
    {
      "name": "BamForBigwig",
      "class": "file",
      "outputSource": {
        "$dnanexus_link": {
          "stage": "stage-DEDUP",
          "outputField": "OutBam"
        }
      }
    }
  ]
}
