{
  "name": "ccbr_star_p1",
  "title": "ccbr_star_p1",
  "summary": "Pass 1 of STAR aligner",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "RawFq",
      "label": "RawFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz","*.fastq"
      ],
      "help": ""
    },
    {
      "name": "TrimmedFq",
      "label": "TrimmedFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.trimmed.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "TrimmedFastqcTxt",
      "label": "TrimmedFastqcTxt",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*_fastqc_data.txt"
      ],
      "help": ""
    },
    {
      "name": "Genome",
      "label": "hg19 or hg38 or mm9 or mm10",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "UniqSJOutTab",
      "label": "UniqSJOutTab",
      "class": "file",
      "patterns": [
        "uniq.SJ.out.tab"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "execDepends": [
        {"name": "tree"},
        {"name": "python2.7"}
                   ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_star_p1.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd2_x2"
        }
      }
    }
  }
}
