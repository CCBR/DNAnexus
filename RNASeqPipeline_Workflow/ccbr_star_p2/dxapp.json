{
  "name": "ccbr_star_p2",
  "title": "ccbr_star_p2",
  "summary": "Pass 2 of STAR aligner",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "RawFq",
      "label": "RawFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz","*.fastq"
      ],
      "help": ""
    },
    {
      "name": "TrimmedFq",
      "label": "TrimmedFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.trimmed.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "TrimmedFastqcTxt",
      "label": "TrimmedFastqcTxt",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*_fastqc_data.txt"
      ],
      "help": ""
    },
    {
      "name": "Genome",
      "label": "hg19 or hg38 or mm9 or mm10",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "UniqSJOutTab",
      "label": "UniqSJOutTab",
      "class": "file",
      "optional": false,
      "help": "uniq.SJ.out.tab"
    }  	],
  "outputSpec": [
    {
      "name": "OutTab",
      "label": "OutTab",
      "class": "array:file",
      "patterns": [
        "*.SJ.out.tab"
      ],
      "help": ""
    },
    {
      "name": "OutReadsPerGeneTab",
      "label": "OutReadsPerGeneTab",
      "class": "array:file",
      "patterns": [
        "*.ReadsPerGene.out.tab"
      ],
      "help": ""
    },
    {
      "name": "OutTranscriptomeBam",
      "label": "OutTranscriptomeBam",
      "class": "array:file",
      "patterns": [
        "*.toTranscriptome.out.bam"
      ],
      "help": ""
    },
    {
      "name": "OutLog",
      "label": "OutLog",
      "class": "array:file",
      "patterns": [
        "*.final.out"
      ],
      "help": ""
    },
    {
      "name": "OutStarDuplic",
      "label": "OutStarDuplic",
      "class": "array:file",
      "patterns": [
        "*.star.duplic"
      ],
      "help": ""
    },
    {
      "name": "OutStarDmarkBam",
      "label": "OutStarDmarkBam",
      "class": "array:file",
      "patterns": [
        "*.dmark.bam"
      ],
      "help": ""
    },
    {
      "name": "OutStarDmarkBai",
      "label": "OutStarDmarkBai",
      "class": "array:file",
      "patterns": [
        "*.dmark.bai"
      ],
      "help": ""
    },
    {
      "name": "OutRnaSeqMetricsTxt",
      "label": "OutRnaSeqMetricsTxt",
      "class": "array:file",
      "patterns": [
        "*.RnaSeqMetrics.txt"
      ],
      "help": ""
    }
		],
  "runSpec": {
    "execDepends": [
        {"name": "tree"},
        {"name": "python2.7"},
        {"name": "openjdk-8-jre-headless"}
                   ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_star_p2.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
