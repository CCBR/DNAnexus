{
  "name": "ccbr_bam2rsemcounts",
  "title": "ccbr_bam2rsemcounts",
  "summary": "Use RSEM to count genes and isoforms",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "TranscriptomeBam",
      "label": "STAR pass 2 generated Aligned.toTranscriptome.out.bam file",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.toTranscriptome.out.bam"
      ],
      "help": ""
    },
    {
      "name": "Genome",
      "label": "Genome eg. mm9 or hg19",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "OutRSEMgenes",
      "label": "Output table from RSEM",
      "class": "array:file",
      "patterns": [
        "*.RSEM.genes.results"
      ],
      "help": ""
    },
    {
      "name": "OutRSEMisoforms",
      "label": "Output table from RSEM for isoforms",
      "class": "array:file",
      "patterns": [
        "*.RSEM.isoforms.results"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "execDepends": [
        {"name": "tree"},
        {"name": "python2.7"}
                   ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_bam2rsemcounts.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_hdd2_x1"
        }
      }
    }
  }
}
