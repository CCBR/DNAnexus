{
  "name": "ccbr_fastqc",
  "title": "ccbr_fastqc",
  "summary": "run fastqc and return txt and html report",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "InFq",
      "label": "Input fastq",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq",
        "*.fastq.gz"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "OutHtml",
      "label": "Output HTML report",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "OutTxt",
      "label": "Output txt file for multiqc",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_fastqc.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
