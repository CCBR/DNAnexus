{
  "name": "ccbr_fastqscreen_db2_array",
  "title": "ccbr_fastqscreen_db2_array",
  "summary": "Runs fastq_screen on every fastq file after subseting it to 1mil reads against rRNA and Uni_vectors databases (db2)",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "InFq",
      "label": "InFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz",
        "*.fastq"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "OutTxt",
      "label": "Output Txt files",
      "class": "array:file",
      "patterns": [
        "*.txt"
      ],
      "help": ""
    },
    {
      "name": "OutPng",
      "label": "Output Png files",
      "class": "array:file",
      "patterns": [
        "*.png"
      ],
      "help": ""
    },
    {
      "name": "OutHtml",
      "label": "Output HTML files",
      "class": "array:file",
      "patterns": [
        "*.html"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "execDepends": [
        {"name": "tree"}
                   ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_fastqscreen_db2_array.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_hdd2_x1"
        }
      }
    }
  }
}
