{
  "name": "ccbr_fastqc_array",
  "title": "ccbr_fastqc_array",
  "summary": "Run fastqc on an array of fastq files in parallel",
  "dxapi": "1.0.0",
  "version": "0.0.2",
  "inputSpec": [
    {
      "name": "InFq",
      "label": "InFq",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz", "*.fastq"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "OutHtml",
      "label": "OutHtml",
      "class": "array:file",
      "patterns": [
        "*_fastqc_report.html"
      ],
      "help": ""
    },
    {
      "name": "OutTxt",
      "label": "OutTxt",
      "class": "array:file",
      "patterns": [
        "*_fastqc_data.txt"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "execDepends": [
        {"name": "tree"}
                   ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/ccbr_fastqc_array.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  }
}
